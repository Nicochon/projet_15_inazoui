{% extends 'admin.html.twig' %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Invités</h1>
        <a href="{{ path('admin_guest_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guest in guests %}
            <tr>
                <td>{{ guest.name }}</td>
                <td>
                    {% if guest.active %}
                        <span class="badge bg-success">Actif</span>
                    {% else %}
                        <span class="badge bg-secondary">Révoqué</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_guest_delete', {id: guest.id}) }}" class="btn btn-warning">Modifier</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        {% if guest.active %}
                            <a href="{{ path('admin_guest_revoke', {id: guest.id}) }}" class="btn btn-outline-danger"
                               onclick="return confirm('Révoquer l’accès de cet invité ?');">Révoquer</a>
                        {% else %}
                            <a href="{{ path('admin_guest_activate', {id: guest.id}) }}" class="btn btn-outline-success"
                               onclick="return confirm('Réactiver l’accès de cet invité ?');">Réactiver</a>
                        {% endif %}
                        <a href="{{ path('admin_guest_delete', {id: guest.id}) }}" class="btn btn-danger" onclick="return confirm('Supprimer cet invité ?');">Supprimer</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
